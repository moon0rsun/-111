/* 区域1：视频播放器 */
/* 视频组件样式 */
video{
  width: 100%;
}

/* 区域2：弹幕控制 */
/* 弹幕区域样式 */
.danmuArea{
  display: flex;
  flex-direction: row;
}

/* 文本输入框形式 */
input{
  border: lrpx solid #987938;
  flex-grow: 1;
  height: 100rpx;
}

/* 按钮样式 */
button{
  color: white;
  background-color: #987938;
}

/* 区域3：视频列表样式 */
/* 视频播放列表区域样式 */
.videoList{
  width: 100%;
  min-height: 400rpx;
}

/* 单行列表区域样式 */
.videoBar{
  width: 95%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #987938;
  margin: 10rpx;
}

/* 播放图标样式 */
image{
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
}

/* 文本标题样式 */
text{
  font-size: 45rpx;
  color:#987938;
  margin:20rpx;
  flex-grow:1;
}